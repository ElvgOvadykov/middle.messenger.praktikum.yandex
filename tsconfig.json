{
	"compilerOptions": {
		"target": "es2016",
		"allowJs": true,
		"checkJs": false,
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@pages/*": ["./src/pages/*"],
			"@utils/*": ["./src/utils/*"],
			"@styles/*": ["./src/styles/*"],
			"@icons/*": ["./static/icons/*"],
			"@images/*": ["./static/image/*"]
		},
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"lib": ["ESNext", "DOM"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true
	},
	"include": ["./src"],
	"exclude": [
		"./node_modules",
		"./dist",
		"./parcel-cache",
		"./.github",
		"./static"
	]
}
