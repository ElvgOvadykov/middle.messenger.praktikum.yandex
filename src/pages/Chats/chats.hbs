<div>
	<section class="content-section">
		<div class="chats">
			<div class="chats__list">
				<div class="chats__list__search">
					{{{searchInput}}}
				</div>
				<div class="chats__list__add-button-block">
					{{{addChatButton}}}
				</div>
				{{{chatList}}}
				{{{profileBlock}}}
			</div>
			{{#if selectedChatId}}
				{{{chatMessages}}}
			{{else}}
				<div class="select-chat-block">
					<div class="select-chat-block__image"></div>
					Выберите чат
				</div>
			{{/if}}
		</div>
		{{#if isCreateChatModalVisible}}
			{{{createChatModal}}}
		{{/if}}
	</section>
	{{{errorMessage}}}
</div>
